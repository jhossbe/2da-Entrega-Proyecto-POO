<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #2c3e50;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.triviaucab1.controller.PartidaNuevaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Selección de Jugadores" textFill="WHITE" />
        
        <!-- Response Time Configuration -->
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label style="-fx-font-weight: bold;" text="Tiempo de respuesta para jugadores (segundos):" textFill="WHITE" />
                <TextField fx:id="tiempoRespuestaTextField" promptText="30" text="30" prefWidth="80.0" />
            </children>
        </HBox>
        
        <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="JUGADORES DISPONIBLES" textFill="#f2efef" />
                        <ListView fx:id="jugadoresDisponiblesListView" prefHeight="200.0" prefWidth="200.0" />
                        <HBox alignment="CENTER" spacing="10.0">
                            <Button onAction="#handleAddPlayer" text="Añadir &gt;&gt;" />
                            <Button onAction="#handleRemovePlayer" text="&lt;&lt; Quitar" />
                        </HBox>
                    </children>
                </VBox>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="JUGADORES SELECCIONADOS" textFill="WHITE" />
                        <ListView fx:id="jugadoresSeleccionadosListView" prefHeight="200.0" prefWidth="200.0" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleJugar" prefHeight="40.0" prefWidth="100.0" text="Jugar" />
                <Button mnemonicParsing="false" onAction="#handleRegresar" prefHeight="40.0" prefWidth="100.0" text="Regresar" />
                <Button mnemonicParsing="false" onAction="#handleSalir" prefHeight="40.0" prefWidth="100.0" text="Salir" />
            </children>
        </HBox>
    </children>
</VBox>
