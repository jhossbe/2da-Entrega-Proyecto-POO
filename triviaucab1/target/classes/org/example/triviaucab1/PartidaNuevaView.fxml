<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.triviaucab1.controller.PartidaNuevaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Selección de Jugadores" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="JUGADORES DISPONIBLES" style="-fx-font-weight: bold;"/>
                        <ListView fx:id="jugadoresDisponiblesListView" prefHeight="200.0" prefWidth="200.0"/>
                        <HBox alignment="CENTER" spacing="10.0">
                            <Button text="Añadir &gt;&gt;" onAction="#handleAddPlayer"/>
                            <Button text="&lt;&lt; Quitar" onAction="#handleRemovePlayer"/>
                        </HBox>
                    </children>
                </VBox>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="JUGADORES SELECCIONADOS" style="-fx-font-weight: bold;"/>
                        <ListView fx:id="jugadoresSeleccionadosListView" prefHeight="200.0" prefWidth="200.0"/>
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleJugar" text="Jugar" prefWidth="100.0" prefHeight="40.0"/>
                <Button mnemonicParsing="false" onAction="#handleRegresar" text="Regresar" prefWidth="100.0" prefHeight="40.0"/>
                <Button mnemonicParsing="false" onAction="#handleSalir" text="Salir" prefWidth="100.0" prefHeight="40.0"/>
            </children>
        </HBox>
    </children>
</VBox>
