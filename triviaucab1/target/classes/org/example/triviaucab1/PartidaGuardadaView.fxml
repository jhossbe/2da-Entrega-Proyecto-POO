<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.triviaucab1.controller.PartidaGuardadaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Cargar Partida Guardada" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <Label text="Aquí se listarán las partidas guardadas y se seleccionará una." />
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleCargarPartida" text="Cargar Partida" prefWidth="120.0" prefHeight="40.0"/>
                <Button mnemonicParsing="false" onAction="#handleRegresar" text="Regresar" prefWidth="100.0" prefHeight="40.0"/>
                <Button mnemonicParsing="false" onAction="#handleSalir" text="Salir" prefWidth="100.0" prefHeight="40.0"/>
            </children>
        </HBox>
    </children>
</VBox>
