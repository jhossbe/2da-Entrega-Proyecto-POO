<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.Color?>

<AnchorPane prefHeight="450.0" prefWidth="650.0" style="-fx-background-color: #333333;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.triviaucab1.controller.PreguntaController">
    <children>
        <VBox alignment="CENTER" layoutX="25.0" layoutY="25.0" prefHeight="400.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label fx:id="categoriaLabel" text="Categoría: " textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="preguntaLabel" alignment="CENTER" contentDisplay="CENTER" text="¿Cuál es la capital de Francia?" textAlignment="CENTER" textFill="WHITE" wrapText="true" VBox.vgrow="ALWAYS">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <TextField fx:id="respuestaTextField" promptText="Escribe tu respuesta aquí" />
                <Button fx:id="enviarRespuestaButton" mnemonicParsing="false" onAction="#handleEnviarRespuesta" prefWidth="150.0" text="Enviar Respuesta">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Label fx:id="resultadoLabel" alignment="CENTER" contentDisplay="CENTER" textAlignment="CENTER" textFill="WHITE" visible="false">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </children>
        </VBox>
        <Label fx:id="tiempoRespuestaLabel" alignment="CENTER" text="10" textFill="RED" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
